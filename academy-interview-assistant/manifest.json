{
  "manifest_version": 3,
  "name": "Academy Interview Assistant",
  "version": "3.4.0",
  "description": "Auto-opens feedback form after Google Meet interviews",
  "permissions": [
    "tabs",
    "storage",
    "notifications",
    "cookies"
  ],
  "host_permissions": [
    "https://meet.google.com/*",
    "https://academy-ai-assistant.vercel.app/*",
    "https://*.vercel.app/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [{
    "matches": ["https://meet.google.com/*"],
    "js": ["content.js"],
    "run_at": "document_idle"
  }],
  "icons": {
    "128": "icon.png"
  }
}
